CC         = gfortran
CFLAGS     = -g -O2 -fPIC
R_DIR      = /usr/lib64/R
DLL_BLAS   = $(R_DIR)/lib/libRblas.so
DLL_LAPACK = $(R_DIR)/lib/libRlapack.so
DLL_R      = $(R_DIR)/lib/libR.so

# Link
OBJ = rsae.o rsaeext.o

rsae.so : $(OBJ)
	$(CC) -shared -o $@ -L $(DLL_BLAS) $(DLL_LAPACK) $(DLL_R) $(OBJ)

# Compile
%.o : %.f90
	$(CC) -Wall -pedantic $(CFLAGS) -c $< -o $@

# Housekeeping
.PHONY: clean
clean:
	rm $(OBJ) rsae.so

